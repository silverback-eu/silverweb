{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "dotEnv": [".env.local", ".env", ".env.production"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**",
        "dist/**"
      ]
    },
    "lint": {},
    "dev": {
      "dotEnv": [".env.local", ".env", ".env.development"],
      "env": ["NEXT_PUBLIC_*", "NODE_ENV", "STORYBOOK_*"],
      "passThroughEnv": ["NEXT_PUBLIC_*", "NODE_ENV", "STORYBOOK_*"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
